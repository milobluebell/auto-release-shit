{
  "manifest_version": 2,
  "name": "Auto Release Sh*t",
  "description": "自动生成发版申请",
  "version": "1.0.0",
  "permissions": [
    "tabs",
    "webRequest",
    "*://jenkins.codemao.cn/*"
  ],
  "page_action": {
    "default_icon": {
      "19": "imgs/favicon.png",
      "38": "imgs/favicon.png"
    },
    "default_title": "release your sh*t elegantly",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://jenkins.codemao.cn/*"
      ],
      "css": [
        "index.css"
      ],
      "js": [
        "/subs/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "ids": [
      "*"
    ],
    "matches": [
      "*://jenkins.codemao.cn/*"
    ]
  },
  "omnibox": {
    "keyword": "rea"
  },
  "background": {
    "scripts": [
      "/subs/background.js"
    ]
  }
}