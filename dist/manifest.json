{
  "manifest_version": 2,
  "name": "Auto Release Sh*t",
  "description": "自动生成发版申请",
  "version": "1.0.0",
  "permissions": [
    "history",
    "webNavigation",
    "tabs",
    "*://jenkins.codemao.cn/*"
  ],
  "page_action": {
    "default_icon": {
      "19": "imgs/favicon.png",
      "38": "imgs/favicon.png"
    },
    "default_title": "release your sh*t elegantly",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://jenkins.codemao.cn/*"
      ],
      "css": [
        "index.css"
      ],
      "js": [
        "index.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "omnibox": { "keyword" : "rea" },
  "background": {
    "scripts": [
      "/subs/background.js"
    ],
    "persistent": false
  }
}